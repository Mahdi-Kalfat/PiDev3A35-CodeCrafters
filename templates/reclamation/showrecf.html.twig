                                <th>{{reclamationf.nom}}</th>
                                <td>{{reclamationf.email}}</td>
                                <td>{{reclamationf.obj}}</td>
                                <td>{{reclamationf.contenu}}</td>
                                <td>{{reclamationf.type}}</td>
                                {% if reclamationf.etat == 0  %}
                                <td> Non Traitée</td>
                                {% elseif reclamationf.etat == 1 %}
                                    <td>Traitée</td>
                                {% endif %}
                                
                                <td>{% if reclamationf.image %}
                                    <img src="{{ asset('imgrec/' ~ reclamationf.image) }}" alt="user-avatar" class="img-circle img-fluid mx-auto" style="width: 200px;">
                                {% endif %}</td>
                                <td><a href="{{path('app_reclamation_edit', {'id': reclamationf.id })}}" style="color : black;">Edit</a> | <a href="{{path('app_reclamation_deletef', {'id': reclamationf.id })}}" style="color : black;">Delete</a></td>
                                </tr>
                            {% endfor %}
