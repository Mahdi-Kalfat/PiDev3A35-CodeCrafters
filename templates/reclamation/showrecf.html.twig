                        <h2 class="contact-title text-center">List Reclamation</h2>
                        <a href="{{path('app_reclamation')}}" class="button button-contactForm boxed-btn mb-3">Ajouter Reclamation</a>
                        <table class="table">
                            <thead>
                                <tr>
                                <th scope="col">Nom</th>
                                <th scope="col">Email</th>
                                <th scope="col">Obj</th>
                                <th scope="col">Contenu</th>
                                <th scope="col">Date</th>
                                <th scope="col">Etat</th>
