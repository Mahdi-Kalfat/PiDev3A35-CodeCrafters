{% extends 'baseAdmin.html.twig' %}

{% block body %}
<body class="hold-transition login-page">
<div class="login-box">
  <div class="login-logo">
    <a href="../../index2.html"><b>WeTek</b> Admin</a>
  </div>
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg">Connectez-vous et commencer votre session</p>
      {{ form_start(form, {'attr': {novalidate: 'novalidate'}}) }}
        <div class="input-group mb-3">
        {{ form_widget(form.mail, {'attr': {'placeholder': 'Votre E-mail', 'class': 'form-control', 'name':'mail' }}) }}
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
         {{ form_widget(form.mdp, {'attr': {'placeholder': 'Votre Mot De Passe', 'class': 'form-control', 'name':'mdp','type':'file'}} ) }}
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-7">
            <div class="icheck-primary">
              <p class="mb-1 mt-2">
        <a href="forgot-password.html">Mot de passe oubli√©e</a>
      </p>
            </div>
          </div>
<!-- /.col -->
          <div class="col-5">
          {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-block'} }) }}
          </div>
          <!-- /.col -->
        </div>
      {{ form_end(form) }} 
    </div>
    <!-- /.login-card-body -->
  </div>
  {% for flashType, flashMessages in app.flashes %}
                                        {% for flashMessage in flashMessages %}
                                            <div class="alert alert-danger alert-dismissible fade show col-md-12" role="alert">
                                                <strong class="d-flex justify-content-center">{{ flashMessage }}</strong>
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                        {% endfor %}
                                    {% endfor %}
</div>
<!-- /.login-box -->
</body>
{% endblock %}
